@page "/"
@layout LoginLayout
@inject NavigationManager NavigationManager

<div class="login-container">
    <div class="login-header">
        <h1>JOSSAN</h1>
    </div>

    <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="login-body">
        <DataAnnotationsValidator />

        <div class="form-group">
            <label for="user">Usuario</label>
            <InputText id="user" @bind-Value="loginModel.User"
                       class="form-control" placeholder="admin" />
            <ValidationMessage For="@(() => loginModel.User)" />
        </div>

        <div class="form-group">
            <label for="password">Contraseña</label>
            <InputText id="password" type="password" @bind-Value="loginModel.Password"
                       class="form-control" placeholder="Ingresa tu contraseña" />
            <ValidationMessage For="@(() => loginModel.Password)" />
        </div>

        <div class="remember-forgot">
            <label class="checkbox-wrapper">
                <InputCheckbox @bind-Value="loginModel.RememberMe" />
                <span>Recuérdame</span>
            </label>
            <a href="#">¿Olvidaste tu contraseña?</a>
        </div>

        <button type="submit" class="login-btn">Iniciar Sesión</button>
    </EditForm>

    <div class="login-footer">
        <p>¿No tienes cuenta? <a href="#">Regístrate aquí</a></p>
    </div>
</div>

@code {
    private LoginModel loginModel = new();

    private void HandleLogin()
    {
        if (loginModel.User == "admin" && loginModel.Password == "admin123")
        {
            NavigationManager.NavigateTo("/AdminDashboard");
        }
    }

    public class LoginModel
    {
        public string User { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; }
    }
}

